<div class="row ml-5 mr-5 d-flex justify-content-center">
    <div class="mt-5 col-xl-4 col-lg-6 col-md-8 col-sm-9 col-12">
        <div class="prof-view container p-4 rounded">
            <div class="row">
                <% if(result.imageURL) { %>
                    <img class="rounded-circle prof-pic mx-auto" src="<%= result.imageURL %>" alt="">
                    <% } else { %>
                        <span class="prof-pic m-auto disabled rounded-circle text-center text-light bg-secondary"
                            style="font-size: 5rem; padding: 49px;">
                            <%= result.username.charAt(0).toUpperCase() %>
                        </span>
                        <% } %>
            </div>
            <div class="row d-flex justify-content-center mt-3 mb-3">
                <h3 class="text-center font-weight-bolder">
                    <%= result.username %>
                </h3>
            </div>
            <div class="row d-flex justify-content-between">
                <span>Member Since</span>
                <span class="font-weight-bold">
                    <%= result.joinDate %>
                </span>
            </div>
            <div class="row d-flex justify-content-between">
                <span>Location/Area</span>
                <span class="font-weight-bold">
                    <%= result.location ? result.location : "--" %>
                </span>
            </div>
            <div class="row d-flex justify-content-between">
                <span>Title</span>
                <span class="font-weight-bold">
                    <%= result.title ? result.title : "--" %>
                </span>
            </div>
        </div>
        <div class="container prof-view rounded-top mt-4">
            <div class="row m-1 my-2">
                <h4 class="font-weight-bold">Description</h4>
            </div>
        </div>
        <div class="container prof-view rounded-bottom">
            <div class="row m-1 my-2">
                <p class="font-weight-bold">
                    <%= result.bio ? result.bio : "--" %>
                </p>
            </div>
        </div>
    </div>
    <div class="mt-5 col-xl-8 col-lg-6 col-md-6 col-sm-8 col-11 prof-view rounded">
        <section class="course-area">
            <div class="course-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-heading text-center">
                                <h2 class="section__title mt-4">Jobs Available</h2>
                                <span class="section-divider"></span>
                            </div><!-- end section-heading -->
                        </div><!-- end col-lg-12 -->
                    </div><!-- end row -->
                    <div class="row">
                        <% if(result.courses) { result.courses.forEach(course=> { %>
                            <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12 mx-xl-0 mx-lg-0 mx-auto">
                                <div class="card-item card-preview tooltipstered">
                                    <div class="preview-course-video">
                                        <a href="/courses/view/<%=course._id%>">
                                            <div class="mx-auto" style="width: 170px; height: 170px;">
                                                <!-- <img src="<%= course.picture %>" style="width: 100%; height: 100%;"
                                                alt="course-img"> -->
                                            </div>
                                            <div class="mx-auto" style="width: 170px;">
                                                <h5 class="card-text text-center mt-2"
                                                    style="height: 3.2rem; -webkit-line-clamp: 2 !important;">
                                                    <%= course.title %>
                                                </h5>
                                            </div>
                                        </a>
                                    </div><!-- end card-content -->
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <h4 class="m-auto text-center">No Jobs offered yet.</h4>
                                    <% } %>
                    </div>
                </div><!-- end container -->
            </div><!-- end course-wrapper -->
        </section>
    </div>
</div>
<!-- ================================
       START LOGIN AREA
================================= -->
<section class="login-area section--padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mx-auto">
                <div class="card-box-shared">
                    <div class="card-box-shared-title text-center">
                        <h3 class="widget-title font-size-25">OTP login </h3>
                    </div>
                    
                    <div class="card-box-shared-body">
                        <div class="contact-form-action">
                            <form  onsubmit="return false">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="input-box">

                                            <label class="label-text">Phone Number<span
                                                    class="primary-color-2 ml-1">*</span></label>
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <select id="exampleForm.ControlSelect1" class="form-control" 
                                                    onmousedown="this.value='';" onchange="updateCountryCodeInHtml(this.value);">
                                                        <option value="+1">United States</option> </select>
                                                </div>
                                                <input class="form-control" type="tel" name="userphone" id="mobileNumber"
                                                    placeholder="phone Number">
                                                <span class="la la-envelope input-icon"></span>
                                                <div id="recaptcha-container"></div>
                                            </div>
                                        </div>

                                    </div><!-- end col-md-12 -->
                                    
                                    <div id="phoneNumberError" class="col-lg-12">
                                        <div class="input-box">
                                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                                This contact number already in use
                                                <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 ">
                                        <div class="btn-box">
                                            <button class="theme-btn" type="submit" onclick="phoneAuth()">Generate OTP</button>
                                        </div>
                                        <div class="input-box">
                                            <label class="label-text">Enter OTP<span
                                                    class="primary-color-2 ml-1">*</span></label>
                                            <div class="form-group">
                                                <input class="form-control" type="number" name="otp" id="verificationCode"
                                                    placeholder="OTP">
                                                <span class="la la-envelope input-icon"></span>
                                            </div>
                                              <button onclick="codeverify()" class="theme-btn" type="submit">Verify OTP</button>
                                        </div>
                                        <a
                                            href="#"
                                            class="reset-back-code"
                                            onclick="codeverify();">
                                            
                                        </a>
                                    </div><!-- end col-md-12 -->
                                    <div class="col-lg-12">
                                        <p class="mt-4">Don't have an account? <a href="/pages/register-page"
                                                class="primary-color-2">Register</a></p>
                                    </div><!-- end col-md-12 -->
                                </div><!-- end row -->
                            </form>
                        </div><!-- end contact-form -->
                    </div>
                </div>
            </div><!-- end col-lg-7 -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end login-area -->

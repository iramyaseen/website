<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="my-4 text-secondary">Search results for '<span id="search-word">
                        <%= searchWord %>
                    </span>'
                </h2>
            </div>
        </div>
        <% if(searches) { %>
            <div class="row" id="search-cards">
                <% searches.forEach(search=> { %>
                    <div id="videos"
                        class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12 mx-xl-0 mx-lg-0 mx-auto search-card">
                        <div class="card-item card-preview tooltipstered">
                            <div class="preview-course-video">
                                <a href="/courses/view/<%=search._id%>">
                                    <div class="mx-auto" style="width: 170px; height: 170px;">
                                        <!-- <img src="<%= search.picture %>" style="width: 100%; height: 100%;"
                                            alt="course-img"> -->
                                    </div>
                                    <div class="mx-auto" style="width: 170px;">
                                        <h5 class="card-text text-center mt-2"
                                            style="height: 3.2rem; -webkit-line-clamp: 2 !important;">
                                            <%= search.title %>
                                        </h5>
                                    </div>
                                </a>
                            </div><!-- end card-content -->
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div class="mt-2 pt-4 border-top row d-flex justify-content-center">
                <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <button type="button" id="page-nav-backward" class="btn btn-info btn-lg disabled"><i
                                class="fa fa-arrow-left"></i></button>
                        <% for(i=0; buttons> i ; i++) {%>
                            <% if( i===0) { %>
                                <button type="button" class="page-nav btn btn-info btn-lg active font-weight-bolder">
                                    <%= i + 1 %>
                                </button>
                                <% } else if(i> 8) { %>
                                    <button type="button"
                                        class="page-nav btn btn-info btn-lg font-weight-bolder d-none">
                                        <%= i + 1 %>
                                    </button>
                                    <% } else { %>
                                        <button type="button" class="page-nav btn btn-info btn-lg font-weight-bolder">
                                            <%= i + 1 %>
                                        </button>
                                        <% } %>
                                            <% } %>
                                                <% if(buttons===1) { %>
                                                    <button type="button" id="page-nav-forward"
                                                        class="btn btn-info btn-lg disabled"><i
                                                            class="fa fa-arrow-right"></i></button>
                                                    <% } else { %>
                                                        <button type="button" id="page-nav-forward"
                                                            class="btn btn-info btn-lg"><i
                                                                class="fa fa-arrow-right"></i></button>
                                                        <% } %>
                    </div>
                </div>
            </div>
            <% } else { %>
                <div class="row">
                    <div class="col">
                        <h2 class="my-4 border-bottom text-secondary">No matches found!</h2>
                    </div>
                </div>
                <% } %>
    </div>
</body>

</html>